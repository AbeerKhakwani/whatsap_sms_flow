{
  "version": "7.3",
  "data_api_version": "3.0",
  "routing_model": {
    "REQUIRED_DETAILS": ["OPTIONAL_DETAILS"],
    "OPTIONAL_DETAILS": ["PHOTOS"],
    "PHOTOS": []
  },
  "screens": [
    {
      "id": "REQUIRED_DETAILS",
      "title": "Item Details",
      "terminal": false,
      "data": {
        "brand": {"type": "string", "__example__": "Sana Safinaz"},
        "pieces": {"type": "string", "__example__": "3-piece"},
        "size": {"type": "string", "__example__": "M"},
        "condition": {"type": "string", "__example__": "Like new"},
        "price": {"type": "string", "__example__": "95"},
        "chest": {"type": "string", "__example__": "36"},
        "hip": {"type": "string", "__example__": "38"}
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextInput",
            "name": "brand",
            "label": "Brand",
            "input-type": "text",
            "required": true,
            "init-value": "${data.brand}",
            "helper-text": "e.g. Sana Safinaz, Maria B"
          },
          {
            "type": "Dropdown",
            "name": "pieces",
            "label": "Pieces",
            "required": true,
            "init-value": "${data.pieces}",
            "data-source": [
              {"id": "1-piece", "title": "1-piece"},
              {"id": "2-piece", "title": "2-piece"},
              {"id": "3-piece", "title": "3-piece"},
              {"id": "Lehnga", "title": "Lehnga"},
              {"id": "Saree", "title": "Saree"},
              {"id": "Sharara", "title": "Sharara"},
              {"id": "Gharara", "title": "Gharara"},
              {"id": "Other", "title": "Other"}
            ],
            "helper-text": "e.g. Kurta only, 3-piece set"

          },
          {
            "type": "Dropdown",
            "name": "size",
            "label": "Size",
            "required": true,
            "init-value": "${data.size}",
            "data-source": [
              {"id": "XS", "title": "XS"},
              {"id": "S", "title": "S"},
              {"id": "M", "title": "M"},
              {"id": "L", "title": "L"},
              {"id": "XL", "title": "XL"},
              {"id": "XXL", "title": "XXL"},
              {"id": "Unstitched", "title": "Unstitched"},
              {"id": "Custom", "title": "Custom"}
            ], 
             "helper-text": "e.g. Large, Xl"

          },
          {
            "type": "Dropdown",
            "name": "condition",
            "label": "Condition",
            "required": true,
            "init-value": "${data.condition}",
            "data-source": [
              {"id": "New with tags", "title": "New with tags"},
              {"id": "Like new", "title": "Like new"},
              {"id": "Excellent", "title": "Excellent"},
              {"id": "Good", "title": "Good"},
              {"id": "Fair", "title": "Fair"}
            ],
            "helper-text": "e.g. Like New, NWT, NWOT"

          },
          {
            "type": "TextInput",
            "name": "price",
            "label": "Price",
            "input-type": "text",
            "required": true,
            "init-value": "${data.price}",
            "helper-text": "e.g. Your asking price in USD"
          },
          {
            "type": "TextSubheading",
            "text": "Measurements"
          },
          {
            "type": "TextInput",
            "name": "chest",
            "label": "Chest (in)",
            "input-type": "text",
            "required": true,
            "init-value": "${data.chest}",
            "helper-text": "e.g. 36"
          },
          {
            "type": "TextInput",
            "name": "hip",
            "label": "Hip (in)",
            "input-type": "text",
            "required": true,
            "init-value": "${data.hip}",
            "helper-text": "e.g. 38"
          },
          {
            "type": "Footer",
            "label": "Next",
            "on-click-action": {
              "name": "navigate",
              "next": {"type": "screen", "name": "OPTIONAL_DETAILS"},
              "payload": {
                "brand": "${form.brand}",
                "pieces": "${form.pieces}",
                "size": "${form.size}",
                "condition": "${form.condition}",
                "price": "${form.price}",
                "chest": "${form.chest}",
                "hip": "${form.hip}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "OPTIONAL_DETAILS",
      "title": "More Details",
      "terminal": false,
      "data": {
        "brand": {"type": "string", "__example__": "Sana Safinaz"},
        "pieces": {"type": "string", "__example__": "3-piece"},
        "size": {"type": "string", "__example__": "M"},
        "condition": {"type": "string", "__example__": "Like new"},
        "price": {"type": "string", "__example__": "95"},
        "chest": {"type": "string", "__example__": "36"},
        "hip": {"type": "string", "__example__": "38"},
        "color": {"type": "string", "__example__": ""},
        "fabric": {"type": "string", "__example__": ""},
        "notes": {"type": "string", "__example__": ""}
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Optional - helps buyers find your item"
          },
          {
            "type": "TextInput",
            "name": "color",
            "label": "Color",
            "input-type": "text",
            "required": false,
            "init-value": "${data.color}",
            "helper-text": "e.g. Maroon, Gold"
          },
          {
            "type": "TextInput",
            "name": "fabric",
            "label": "Fabric",
            "input-type": "text",
            "required": false,
            "init-value": "${data.fabric}",
            "helper-text": "e.g. Chiffon, Silk, Lawn"
          },
          {
            "type": "TextArea",
            "name": "notes",
            "label": "Notes",
            "required": false,
            "init-value": "${data.notes}",
            "helper-text": "Flaws, alterations, extras"
          },
          {
            "type": "Footer",
            "label": "Add Photos",
            "on-click-action": {
              "name": "navigate",
              "next": {"type": "screen", "name": "PHOTOS"},
              "payload": {
                "brand": "${data.brand}",
                "pieces": "${data.pieces}",
                "size": "${data.size}",
                "condition": "${data.condition}",
                "price": "${data.price}",
                "chest": "${data.chest}",
                "hip": "${data.hip}",
                "color": "${form.color}",
                "fabric": "${form.fabric}",
                "notes": "${form.notes}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "PHOTOS",
      "title": "Photos",
      "terminal": true,
      "success": true,
      "data": {
        "brand": {"type": "string", "__example__": "Sana Safinaz"},
        "pieces": {"type": "string", "__example__": "3-piece"},
        "size": {"type": "string", "__example__": "M"},
        "condition": {"type": "string", "__example__": "Like new"},
        "price": {"type": "string", "__example__": "95"},
        "chest": {"type": "string", "__example__": "36"},
        "hip": {"type": "string", "__example__": "38"},
        "color": {"type": "string", "__example__": ""},
        "fabric": {"type": "string", "__example__": ""},
        "notes": {"type": "string", "__example__": ""}
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Add 3+ clear photos (front, back, details)"
          },
          {
            "type": "PhotoPicker",
            "name": "photos",
            "label": "Photos",
            "description": "Tap to add photos",
            "photo-source": "camera_gallery",
            "min-uploaded-photos": 3,
            "max-uploaded-photos": 10,
            "max-file-size-kb": 10240
          },
          {
            "type": "Footer",
            "label": "Submit Listing",
            "on-click-action": {
              "name": "complete",
              "payload": {
                "brand": "${data.brand}",
                "pieces": "${data.pieces}",
                "size": "${data.size}",
                "condition": "${data.condition}",
                "price": "${data.price}",
                "chest": "${data.chest}",
                "hip": "${data.hip}",
                "color": "${data.color}",
                "fabric": "${data.fabric}",
                "notes": "${data.notes}",
                "photos": "${form.photos}"
              }
            }
          }
        ]
      }
    }
  ]
}
