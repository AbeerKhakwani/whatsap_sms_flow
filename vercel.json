{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/" }
  ],
  "crons": [
    {
      "path": "/api/cron/shipping-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/process-payouts",
      "schedule": "0 10 * * *"
    }
  ]
}